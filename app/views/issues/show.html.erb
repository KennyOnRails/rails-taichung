<div class="container-fluid">
  <div class="col-md-offset-2 col-xs-8 col-xs-offset-1">
    <h3><%= @issue.title %>#<%= @issue.id %></h3>
    <div class="row">
      <div class="media">
        <div class="media-left">
          <a href="#">
          <%=image_tag(@issue.owner.gravatar_url(:default => 'https://dl.dropboxusercontent.com/u/1252720/_rortc/ROR.jpg'),
                       class: "media-object")%>
          </a>
          <%= @issue.owner.name %>
          <%= @issue.created_at.strftime("%Y/%m/%d") %>
        </div>
        <div class="media-body">
          <%= raw(@issue.content) %>
        </div>
      </div>
    </div>
  </div>

</div>

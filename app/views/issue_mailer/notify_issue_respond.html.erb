<div class="container-fluid">
  <div class="col-md-offset-2 col-xs-8 col-sm-8 col-md-8 col-xs-offset-1">
    <div class="row">
      <div class="col-md-10 col-xs-10 col-md-10">        
        <%= link_to(issue_url(@issue)) do %>
          <h3><%= @issue.title %>#<%= @issue.id %></h3>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= @issue.owner.name %> <%= I18n.t('commented_on') %> <%= @issue.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
          </h4>
          <%= raw(@issue.content) %>
        </div>
      </div>
      <hr>
      <% @issue_responds.each do |issue_respond| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading"><%= issue_respond.user.name %> <%= I18n.t('commented_on') %> <%= issue_respond.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
            </h4>
            <%= raw(issue_respond.content) %>
          </div>
        </div>
        <hr>
      <% end %>
    </div>
  </div>
</div>
